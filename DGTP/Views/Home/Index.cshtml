</div>
<!-- Slider Area End Here -->
<!-- Begin Product Area -->
<div class="product-area section-space-top-100">
    <div class="container">
        <div class="section-title-wrap">
            <h2 class="section-title mb-0">Sản Phẩm</h2>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav product-tab-nav tab-style-1" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="active" id="all-tab" data-bs-toggle="tab" href="#all-product" role="tab" aria-controls="all-product" aria-selected="true">
                            TẤT CẢ SẢN PHẨM
                        </a>
                    </li>
                    @foreach(var item in ViewBag.Products)
                    {
                    <li class="nav-item" role="presentation">
                        <a id="@(item.Value[0].CategoryAlias)-tab" data-bs-toggle="tab" href="#@item.Value[0].CategoryAlias" role="tab" aria-controls="@(item.Value[0].CategoryAlias)" aria-selected="false">
                            @item.Key
                        </a>
                    </li>
                    }
                </ul>
                <div class="tab-content" id="myTabContent">
                    @foreach(var item in ViewBag.Products)
                    {
                    <div class="tab-pane fade" id="@item.Value[0].CategoryAlias" role="tabpanel" aria-labelledby="@(item.Value[0].CategoryAlias)-tab">
                        <div class="product-item-wrap row">
                            @foreach(var data in item.Value)
                            {
                            <div class="col-xl-3 col-md-4 col-sm-6">
                                <div class="product-item">
                                    <div class="product-img">
                                        <a href="/san-pham/@data.Alias">
                                            @{bool isFirst = true;}
                                            @foreach(var img in @data.Images.Split(';'))
                                            {
                                            <img class="@(isFirst ? "primary-img" : "secondary-img")" src="@img" alt="@data.ProductName">
                                            isFirst = false;
                                            }
                                        </a>
                                    </div>
                                    <div class="product-content">
                                        <a class="product-name" href="/san-pham/@data.Alias">@data.ProductName</a>
                                        <div class="price-box pb-1">
                                            <span class="new-price">Liên Hệ</span>
                                        </div>
                                        <div class="rating-box">
                                            <ul>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                    }
                    <div class="tab-pane fade active show" id="all-product" role="tabpanel" aria-labelledby="all-product">
                        <div class="product-item-wrap row">
                            @foreach(var data in ViewBag.AllProducts)
                            {
                            <div class="col-xl-3 col-md-4 col-sm-6">
                                <div class="product-item">
                                    <div class="product-img">
                                        <a href="/san-pham/@data.Alias">
                                            @{bool isFirst = true;}
                                            @foreach(var img in @data.Images.Split(';'))
                                            {
                                            <img class="@(isFirst ? "primary-img" : "secondary-img")" src="@img" alt="@data.ProductName">
                                            isFirst = false;
                                            }
                                        </a>
                                    </div>
                                    <div class="product-content">
                                        <a class="product-name" href="/san-pham/@data.Alias">@data.ProductName</a>
                                        <div class="price-box pb-1">
                                            <span class="new-price">Liên Hệ</span>
                                        </div>
                                        <div class="rating-box">
                                            <ul>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                                <li><i class="fa fa-star"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
