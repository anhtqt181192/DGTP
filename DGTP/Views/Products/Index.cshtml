@model IEnumerable<DGTP.Data.Products>

@{
    ViewData["Title"] = "Index";
}

@section Css {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap4.min.css" />
}

<div class="container-fluid">
    <h1>Index</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
        <thead>
            <tr>
                <th width="100px">
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th width="100px">
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th width="100px">
                    @Html.DisplayNameFor(model => model.CategoryAlias)
                </th>
                <th width="100px">
                    @Html.DisplayNameFor(model => model.Alias)
                </th>
                <th width="10%">
                    @Html.DisplayNameFor(model => model.Images)
                </th>
                <th width="10%">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HTMLCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HTMLDisplay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShortName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SEOName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Introduction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CraeteDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateBy)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryAlias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Alias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Images)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HTMLCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HTMLDisplay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SEOName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Introduction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CraeteDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateBy)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
} 